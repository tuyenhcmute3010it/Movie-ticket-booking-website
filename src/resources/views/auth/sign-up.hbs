<main class="auth">
  <!-- auth intro -->
  <div class="auth__intro d-md-none">
    <a href="./" class="logo auth__intro-logo d-none d-md-flex">
      <img src="./assets/icon/logo.svg" alt="Movin" class="logo__img" />
      <h1 class="logo__title">Movin</h1>
    </a>
    <div class="slideshow">
      <div class="slideshow__inner">
        <div class="slideshow__item">
          <a href="#!" class="slideshow__link">
            <img
              src="./assets/img/slide-show-films/film-1.jpg"
              alt=""
              class="slideshow__img"
            />
          </a>
        </div>

        <div class="slideshow__item">
          <a href="#!" class="slideshow__link">
            <img
              src="./assets/img/slide-show-films/film-2.jpg"
              alt=""
              class="slideshow__img"
            />
          </a>
        </div>
        <div class="slideshow__item">
          <a href="#!" class="slideshow__link">
            <img
              src="./assets/img/slide-show-films/film-3.webp"
              alt=""
              class="slideshow__img"
            />
          </a>
        </div>
        <div class="slideshow__item">
          <a href="#!" class="slideshow__link">
            <img
              src="./assets/img/slide-show-films/film-4.jpg"
              alt=""
              class="slideshow__img"
            />
          </a>
        </div>
        <div class="slideshow__item">
          <a href="#!" class="slideshow__link">
            <img
              src="./assets/img/slide-show-films/film-3.jpg"
              alt=""
              class="slideshow__img"
            />
          </a>
        </div>
      </div>
      <div class="slideshow__controls d-none">
        <button class="slideshow__button slideshow__button--left">
          &lt;
        </button>
        <button class="slideshow__button slideshow__button--right">
          &gt;
        </button>
      </div>
      <div class="slideshow__page">
        <span class="slideshow__slider" data-index="0"></span>
        <span class="slideshow__slider" data-index="1"></span>
        <span class="slideshow__slider" data-index="2"></span>
        <span class="slideshow__slider" data-index="3"></span>
        <span class="slideshow__slider" data-index="4"></span>
      </div>
    </div>
    <p class="auth__intro-text">
      Please provide the following information to sign up for your Movin
      membership. You have to be at least 12 years of age to be eligible for
      registration.
    </p>
    <button
      class="auth__intro-next d-none d-md-flex js-toggle"
      toggle-target="#auth-content"
    >
      <img src="./assets/img/auth/intro-arrow.svg" alt="" />
    </button>
  </div>
  <!-- auth content -->
  <div id="auth-content" class="auth__content">
    <div class="auth__content-inner">
      <!-- logo -->
      <a href="./" class="logo">
        <img src="./assets/img/logo_movin.png" alt="movin" class="logo__img" />
        <h2 class="logo__title">FILM-MOMENT-EXPERIENCE</h2>
      </a>

      <h1 class="auth__heading">Sign Up</h1>
      <p class="auth__desc">Join today â€“ Experience the best in cinema!</p>
      <form
        method="POST"
        action="/store"
        class="form auth__form"
        id="signupForm"
      >
        <div class="form__group">
          <div class="form__text-input">
            <input
              type="email"
              name="email"
              id="email"
              placeholder=" "
              class="form__input"
              required
            />
            <span for="email" class="form__holder">Email</span>
            <img src="./assets/icon/mess.svg" alt="" class="form__input-icon" />
            <img
              src="./assets/icon/error.svg"
              alt=""
              class="form__input-icon--error"
            />
          </div>
          <p class="form__error" id="emailError">Email is not correct format</p>
        </div>

        <div class="form__group">
          <div class="form__text-input">
            <input
              type="password"
              name="password"
              id="password"
              placeholder=" "
              class="form__input"
              required
              minlength="6"
            />
            <span for="password" class="form__holder">Password</span>
            <img src="./assets/icon/lock.svg" alt="" class="form__input-icon" />
            <img
              src="./assets/icon/error.svg"
              alt=""
              class="form__input-icon--error"
            />
            <button
              type="button"
              id="togglePassword"
              class="password-toggle-btn"
            >Show</button>
          </div>
          <p class="form__error" id="passwordError">Password at least 6
            characters</p>
        </div>

        <div class="form__group">
          <div class="form__text-input">
            <input
              type="password"
              name="confirmPassword"
              id="confirmPassword"
              placeholder=" "
              class="form__input"
              required
              minlength="6"
            />
            <span for="confirmPassword" class="form__holder">Confirm Password</span>
            <img src="./assets/icon/lock.svg" alt="" class="form__input-icon" />
            <img
              src="./assets/icon/error.svg"
              alt=""
              class="form__input-icon--error"
            />
            <button
              type="button"
              id="toggleConfirmPassword"
              class="password-toggle-btn"
            >Show</button>
          </div>
          <p class="form__error" id="confirmPasswordError">Passwords do not
            match</p>
        </div>

        <div class="form__group form__group--inline">
          <label for="terms" class="form__checkbox">
            <input
              type="checkbox"
              id="terms"
              class="form__checkbox-input d-none"
            />
            <span class="form__checkbox-label">I have read and agree to the
              <a class="form__group-term">Terms & Conditions</a>
              and
              <a class="form__group-term">Privacy Policy</a>
            </span>
          </label>
        </div>
        <p class="form__error" id="termsError">You must agree to the terms</p>

        <div class="form__group auth__btn-group">
          <button
            type="submit"
            class="btn btn--primary auth__btn form__submit-btn"
          >
            Sign Up
          </button>
        </div>
      </form>
    </div>
  </div>
</main>

<script>
  window.dispatchEvent(new Event("template-loaded"));
</script>