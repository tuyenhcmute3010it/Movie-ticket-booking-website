<main class="profile">
  <div class="container">
    <div class="checkout-container">
      <div class="search-bar d-none d-md-flex">
        <input
          type="text"
          name=""
          id=""
          placeholder="Search for item"
          class="search-bar__input"
        />
        <button class="search-bar__submit">
          <img
            src="/assets/icon/search.svg"
            alt=""
            class="search-bar__icon icon"
          />
        </button>
      </div>
    </div>
    <!-- checkout content -->
    <div class="profile-content">
      <div class="row gy-xl-3">
        <div class="col-3 col-xl-4 d-lg-none">
          <aside class="profile__sidebar">
            <div class="profile-user">
              <img
                src="/assets/img/Login/default.jpg"
                alt=""
                class="profile-user__avatar"
              />
              {{#if profile.name}}
                <h1 class="profile-user__name">{{profile.name}}</h1>
              {{else}}
                <h1 class="profile-user__name">{{profile.name}}</h1>
              {{/if}}
              <p class="profile-user__desc">Registered:
                {{profile.create_at}}</p>
            </div>
            <!-- profile menu 1 -->
            <div class="profile-menu">
              <h3 class="profile-menu__title">Manage Account</h3>
              <ul class="profile-menu__list">

                <li class="profile-menu__item">
                  <a href="#! " class="profile-menu__link">
                    <span class="profile-menu__icon">
                      <img src="/assets/icon/profile.svg" alt="" class="icon" />
                    </span>
                    Update Personal info
                  </a>
                </li>

                <li class="profile-menu__item">
                  <a href="#! " class="profile-menu__link">
                    <span class="profile-menu__icon">
                      <img src="/assets/icon/mess.svg" alt="" class="icon" />
                    </span>
                    Communications & privacy
                  </a>
                </li>
              </ul>
            </div>

            <!-- profile menu 4 -->
            <div class="profile-menu">
              <h3 class="profile-menu__title">Customer Service</h3>
              <ul class="profile-menu__list">
                <li class="profile-menu__item">
                  <a href="#! " class="profile-menu__link">
                    <span class="profile-menu__icon">
                      <img src="/assets/icon/help.svg" alt="" class="icon" />
                    </span>
                    Help
                  </a>
                </li>
                <li class="profile-menu__item">
                  <a href="#! " class="profile-menu__link">
                    <span class="profile-menu__icon">
                      <img src="/assets/icon/term.svg" alt="" class="icon" />
                    </span>
                    Terms of Use
                  </a>
                </li>
              </ul>
            </div>
          </aside>
        </div>
        <div class="col-9 col-xl-8 col-lg-12">
          <div class="cart-info">
            <div class="row gy-3">
              <div class="col-12">
                <h2 class="cart-info__heading">
                  <a href="/profile">
                    <img
                      src="/assets/icon/arrow-left.svg"
                      alt=""
                      class="icon cart-info__back-arrow"
                    />
                  </a>
                  Update Personal info
                </h2>
                <form
                  class="form"
                  method="POST"
                  action="/profile/edit?_method=PUT"
                  id="FormAction"
                >
                  <div class="form__row">
                    <div class="form__group">
                      <label
                        for="Full name"
                        class="form__label form__label--small"
                      >Full name</label>
                      <div class="form__text-input">
                        <input
                          type="text"
                          name="name"
                          id="name"
                          placeholder="Name"
                          class="form__input"
                          value="{{profile.name}}"
                          required
                        />
                        <img
                          src="/assets/icon/font-error.svg"
                          alt=""
                          class="form__input-icon--error"
                        />
                      </div>
                    </div>
                    <div class="form__group">
                      <label
                        for="Email address"
                        class="form__label form__label--small"
                      >Email address</label>
                      <div class="form__text-input">
                        <input
                          type="email"
                          name="email"
                          id="email"
                          placeholder="Email address"
                          class="form__input"
                          required
                          value="{{profile.email}}"
                        />

                        <img
                          src="/assets/icon/font-error.svg"
                          alt=""
                          class="form__input-icon--error"
                        />
                      </div>
                      <div class="form__error" style="display: none;">Email
                        address is required</div>
                    </div>
                  </div>
                  <!-- form row 2 -->
                  <div class="form__row">
                    <div class="form__group">
                      <label
                        for="Phone number"
                        class="form__label form__label--small"
                      >Phone number</label>
                      <div class="form__text-input">
                        <input
                          type="phone"
                          name="phone"
                          id="phone"
                          placeholder="Phone number"
                          class="form__input"
                          value="{{profile.phone}}"
                          required
                        />
                        <img
                          src="/assets/icon/font-error.svg"
                          alt=""
                          class="form__input-icon--error"
                        />
                      </div>
                    </div>
                    <div class="form__group">
                      <label
                        for="password"
                        class="form__label form__label--small"
                      >Password</label>
                      <div class="form__text-input">
                        <input
                          type="password"
                          name="password"
                          id="password"
                          placeholder="Password"
                          class="form__input"
                          value="{{profile.password}}"
                          required
                        />
                        <img
                          src="/assets/icon/font-error.svg"
                          alt=""
                          class="form__input-icon--error"
                        />
                      </div>
                    </div>
                  </div>
                </form>
                <div class="form__group">
                  <div class="form-card__bottom">
                    <a href="/profile" class="btn btn--text">Cancel</a>
                    <button
                      type="button"
                      class="btn btn--primary btn--rounded js-toggle"
                      toggle-target="#save-confirm"
                    >
                      Save
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<!-- modal / confirm remove shopping cart item -->
<div id="save-confirm" class="modal modal--small">
  <button
    class="modal__close js-toggle"
    toggle-target="#save-confirm"
  >&times;</button>
  <div class="modal__content">
    <div class="modal__text">Are you sure to save this information</div>
    <div class="modal__bottom">
      <button
        class="btn btn--text modal__btn js-toggle"
        toggle-target="#save-confirm"
      >Cancel</button>
      <button
        id="modalSaveButton"
        class="btn btn--primary modal__btn btn--no-margin btn--danger"
      >
        Save
      </button>
    </div>
  </div>
  <div class="modal__overlay js-toggle" toggle-target="#save-confirm"></div>
</div>