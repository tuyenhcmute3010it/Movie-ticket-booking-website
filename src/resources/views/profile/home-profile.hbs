<main class="profile">
  <div class="container">
    <div class="checkout-container">
      <div class="search-bar d-none d-md-flex">
        <input
          type="text"
          name=""
          id=""
          placeholder="Search for item"
          class="search-bar__input"
        />
        <button class="search-bar__submit">
          <img
            src="/assets/icon/search.svg"
            alt=""
            class="search-bar__icon icon"
          />
        </button>
      </div>
    </div>
    <!-- checkout content -->
    <div class="profile-content">
      <div class="row gy-xl-3">
        <div class="col-3 col-xl-4 col-lg-5 col-md-12">
          <aside class="profile__sidebar">
            <div class="profile-user">
              <img
                src="/assets/img/Login/default.jpg"
                alt=""
                class="profile-user__avatar"
              />
              {{#if profile.name}}
                <h1 class="profile-user__name">{{profile.name}}</h1>
              {{else}}
                <h1 class="profile-user__name">{{profile.name}}</h1>
              {{/if}}
              <p class="profile-user__desc">Registered:
                {{profile.create_at}}</p>
            </div>
            <!-- profile menu 1 -->
            <div class="profile-menu">
              <h3 class="profile-menu__title">Manage Account</h3>
              <a href="/profile/admin" class="profile-menu__item">
                <a href="/profile/admin" class="profile-menu__link">
                  <span class="profile-menu__icon">
                    <img
                      src="/assets/icon/admin.svg"
                      alt=""
                      class="icon profile-menu__icon"
                    />
                    <span class="profile-menu__span">
                      Admin(Only use by admin)
                    </span>
                  </span>
                </a>
              </a>
              <ul class="profile-menu__list">
                <li class="profile-menu__item">
                  <a href="/profile/edit" class="profile-menu__link">
                    <span class="profile-menu__icon">
                      <img src="/assets/icon/profile.svg" alt="" class="icon" />
                    </span>
                    Update Personal info
                  </a>
                </li>
                <li class="profile-menu__item">
                  <a href="#! " class="profile-menu__link">
                    <span class="profile-menu__icon">
                      <img src="/assets/icon/mess.svg" alt="" class="icon" />
                    </span>
                    Communications & privacy
                  </a>
                </li>
              </ul>
            </div>
            <!-- profile menu 2 -->

            <!-- profile menu 4 -->
            <div class="profile-menu">
              <h3 class="profile-menu__title">Customer Service</h3>
              <ul class="profile-menu__list">
                <li class="profile-menu__item">
                  <a href="#! " class="profile-menu__link">
                    <span class="profile-menu__icon">
                      <img src="/assets/icon/help.svg" alt="" class="icon" />
                    </span>
                    Help
                  </a>
                </li>
                <li class="profile-menu__item">
                  <a href="#! " class="profile-menu__link">
                    <span class="profile-menu__icon">
                      <img src="/assets/icon/term.svg" alt="" class="icon" />
                    </span>
                    Terms of Use
                  </a>
                </li>
              </ul>
            </div>
          </aside>
        </div>
        <div class="col-9 col-xl-8 col-lg-7 col-md-12">
          <div class="cart-info">
            <div class="row gy-3">
              <div class="col-12">
                <h2 class="cart-info__heading">Account info</h2>
                <p class="cart-info__desc profile__desc">
                  Contact information and password
                </p>
                <div class="row gy-md-2 row-cols-2 row-cols-lg-1">
                  <div class="col">
                    <a href="/profile/edit">
                      <article class="account-info">
                        <div class="account-info__icon">
                          <img
                            src="/assets/icon/mess.svg"
                            alt=""
                            class="icon"
                          />
                        </div>
                        <div>
                          <h3 class="account-info__title">Email Address</h3>
                          <p class="account-info__desc">
                            {{profile.email}}
                          </p>
                        </div>
                      </article>
                    </a>
                  </div>
                  <div class="col">
                    <a href="/profile/edit">
                      <article class="account-info">
                        <div class="account-info__icon">
                          <img
                            src="/assets/icon/phone.svg"
                            alt=""
                            class="icon"
                          />
                        </div>
                        <div>
                          <h3 class="account-info__title">Phone number</h3>
                          {{#if profile.phone}}
                            <p class="account-info__desc">{{profile.phone}}</p>
                          {{else}}
                            <p class="account-info__desc">Please add phone
                              number!</p>
                          {{/if}}
                        </div>
                      </article>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<!-- modal / confirm remove shopping cart item -->
<div
  id="delete-confirm"
  class="modal modal--small js-toggle"
  toggle-target="#delete-confirm"
>
  <button class="modal__close">&times;</button>
  <div class="modal__content">
    <div class="modal__text">Are you sure to delete this product?</div>
    <div class="modal__bottom">
      <button
        class="btn btn--text modal__btn js-toggle"
        toggle-target="#delete-confirm"
      >
        Cancel
      </button>
      <button
        class="btn btn--primary modal__btn btn--no-margin js-toggle btn--danger"
        toggle-target="#delete-confirm"
      >
        Remove
      </button>
    </div>
  </div>

  <div class="modal__overlay js-toggle" toggle-target="#delete-confirm"></div>
</div>