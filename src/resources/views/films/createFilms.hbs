          />
        </div>
      </div>

      <div class="col">

        <div class="form__group admin__form">
          <label for="cast">Cast</label>
          <input type="text" class="form__input" id="cast" name="cast" />
        </div>
        <div class="form__group admin__form">
          <label for="director">Director</label>
          <input
            type="text"
            class="form__input"
            id="director"
            name="director"
          />
        </div>
      </div>

      <div class="col">
        <div class="form__group admin__form">
          <label for="description">Description</label>
          <textarea
            class="form__input"
            id="description"
            name="description"
          ></textarea>
        </div>
      </div>

